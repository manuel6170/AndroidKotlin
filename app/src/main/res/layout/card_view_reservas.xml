<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/cardElevation"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/marginCardView"
        android:layout_marginHorizontal="@dimen/marginCardView"
        android:layout_marginBottom="0dp"


>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
    >
    <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <TextView
                android:id="@+id/lavadoraIdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID LAVADORA"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#000"
        />
        <TextView
                android:id="@+id/nombreIdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Persona"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#000"
        />
        <TextView
                android:id="@+id/direccionIdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#000"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <TextView
                android:id="@+id/totalPagarIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="costo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#c60404"
        />
        <TextView
                android:id="@+id/horaEnvioIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de envio"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#000"
        />
        <TextView
                android:id="@+id/estadoIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviada..."
                android:textSize="15sp"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#000"
        />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>